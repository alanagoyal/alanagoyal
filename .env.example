# supabase (required for notes and photos)
NEXT_PUBLIC_SUPABASE_URL="<your-supabase-url>"
NEXT_PUBLIC_SUPABASE_ANON_KEY="<your-anon-key>"
SUPABASE_SERVICE_ROLE_KEY="<your-service-role-key>"

# photos upload api (required for iOS shortcut)
PHOTOS_UPLOAD_API_KEY="<your-upload-api-key>"

# braintrust (required for messages ai)
BRAINTRUST_API_KEY="<your-braintrust-api-key>"

# site config (optional)
NEXT_PUBLIC_SITE_URL="https://yourdomain.com"
REVALIDATE_TOKEN="<your-revalidate-token>"
NEXT_PUBLIC_REVALIDATE_TOKEN="<your-revalidate-token>"

# github (optional - helps avoid rate limits for iterm/finder)
# GITHUB_TOKEN="<your-github-token>"

# a vision-capable LLM for characterizing photos into categories
PHOTOS_MODEL_NAME=gpt-4o-mini

# a tool-capable LLM for chat bots
CHAT_MODEL_NAME=gpt-5.2

# the photo category options - MUST be set before building docker image
# NEXT_PUBLIC_CATEGORY_OPTIONS="flowers,funny,fast cars,food,friends"

# an openai-compatible url, i.e. http://localhost:11434/v1 for local ollama, etc.
OPENAI_BASE_URL=https://api.openai.com/v1

# openai api key, if using local ollama, use non-empty string as a placeholder
OPENAI_API_KEY=abcd

# allow max route duration to be configurable
# MAX_ROUTE_DURATION=30

# need to allow for longer timeouts with local AI (its a little slower with cold starts)
# CHAT_REQUEST_TIMEOUT_MS=27000

